{
  "name": "github-project-manager",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "// ----------------- Development -----------------": "",
    "dev": "vite",
    "preview": "vite preview",
    "// ----------------- Build -----------------": "",
    "build": "tsc && vite build",
    "// ----------------- Code Quality -----------------": "",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "fix": "npm run format && npm run lint:fix",
    "// ----------------- GraphQL -----------------": "",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "// ----------------- Git Hooks -----------------": "",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@apollo/client": "^3.9.5",
    "@graphql-codegen/client-preset": "^3.0.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/uuid": "^10.0.0",
    "@urql/core": "^4.0.6",
    "@urql/devtools": "^2.0.3",
    "@urql/exchange-auth": "^2.1.5",
    "@urql/exchange-graphcache": "^5.0.6",
    "graphql": "^16.8.1",
    "mobx": "^6.12.0",
    "mobx-react-lite": "^4.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.4.0",
    "urql": "^4.0.6",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/fragment-matcher": "^5.1.0",
    "@graphql-codegen/import-types-preset": "^3.0.0",
    "@graphql-codegen/near-operation-file-preset": "^3.0.0",
    "@graphql-codegen/typescript": "^4.1.5",
    "@graphql-codegen/typescript-operations": "^4.5.1",
    "@graphql-codegen/typescript-resolvers": "^4.4.4",
    "@graphql-codegen/typescript-urql": "^4.0.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitejs/plugin-react": "^4.2.1",
    "dotenv": "^16.4.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "sass": "^1.86.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.28.0",
    "vite": "^5.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,jsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
